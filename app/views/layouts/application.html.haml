%html
  %head
    %title 
      = "Dividend Reporter"
    = stylesheet_link_tag "application"
    = csrf_meta_tags
    = favicon_link_tag 'favicon.ico'
  %body
    #wrapper
      #login_bar
        %p
          - if user_signed_in?
            = render :partial => "shared/login_bar_logged_in"
          - else
            = render :partial => "shared/login_bar_logged_out"
      #content
        - flash.each do |key, value|
          = content_tag(:div, value, :class => "flash #{key}")
        %br/
        = yield
